{
    "name": "dcv",
    "description": "Computer vision library for D programming language.",
    "copyright": "Copyright Â© 2016, Relja Ljubobratovic",
    "authors": ["Relja Ljubobratovic"],
    "license": "BSL-1.0",

    "dependencies": {
        ":core": "*",
        ":io": "*",
        ":plot": "*"
    },

    "targetType": "library",

    "sourcePaths": ["scripts"],
    "sourceFiles": ["source/dcv/package.d"],

    "configurations": [
        {
            "name": "default"
        },
        {
            "name": "ggplotd",
            "subConfigurations": 
            {
                "dcv:plot": "ggplotd"
            }
        }
    ],

    "subPackages":
    [
        {
            "name": "core",
            "description": "Core package of DCV. Contains computer vision algorithms.",
            "sourcePaths": [
                "source/dcv/core",
                "source/dcv/features",
                "source/dcv/imgproc",
                "source/dcv/multiview",
                "source/dcv/tracking"
            ],
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            },
            "dependencies":
            {
                "mir-algorithm": "~>0.6.6"
            }
        },
        {
            "name": "io",
            "description": "Image and Video I/O package.",
            "sourcePaths": [
                "source/dcv/io"
            ],
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            },
            "dependencies":{
                "dcv:core": "*",
                "imageformats": "~>6.1.0",
                "ffmpeg-d": "~>3.1.0"
            }
        },
        {
            "name": "plot",
            "description": "Visualization package.",
            "sourcePaths": [
                "source/dcv/plot"
            ],
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            },
            "dependencies":{
                "dcv:core": "*"
            },
            "configurations":
            [
                {
                    "name": "default"
                },
                {
                    "name": "ggplotd",
                    "dependencies": {
                        "ggplotd": "~>1.1.3"
                    },
                    "versions": ["ggplotd"]
                }
            ],
            "libs": ["glfw"],
            "libs-linux": ["GL"],
            "lflags-osx": ["-framework", "OpenGL"]
        }
    ]
}
