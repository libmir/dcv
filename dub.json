{
    "name": "dcv",
    "description": "Computer vision library for D programming language.",
    "copyright": "Copyright © 2016, Relja Ljubobratovic",
    "authors": [
        "Relja Ljubobratovic",
        "Ilya Yaroshenko",
        "Henry Gouk",
        "Dmitry Olshansky",
        "Timothee Cour",
        "Arun Chandrasekaran",
        "The Gitter Badger",
        "Ferhat Kurtulmuş"
    ],
    "license": "BSL-1.0",
    "dependencies": {
        "dcv:core": "*",
        "dcv:io": "*",
        "dcv:videoio": "*",
        "dcv:plot": "*"
    },
    "targetType": "library",
    "sourceFiles": ["source/dcv/package.d"],
    "subPackages": [
        {
            "name": "core",
            "description": "Core package of DCV. Contains computer vision algorithms.",
            "sourcePaths": [
                "source/dcv/core",
                "source/dcv/features",
                "source/dcv/imgproc",
                "source/dcv/tracking",
                "source/dcv/measure",
                "source/dcv/morphology"
            ],
            "dependencies":
            {
                "mir-algorithm": "3.11.4",
                "mir-random": "2.2.19",
                "bcaa": "0.0.8"
            },
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            }
        },
        {
            "name": "io",
            "description": "Image I/O package.",
            "sourcePaths": [
                "source/dcv/io"
            ],
            "dependencies":{
                "dcv:core": "*",
                "imageformats": "7.0.2"
            },
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            }
        },
        {
            "name": "videoio",
            "description": "Video I/O package.",
            "sourcePaths": [ "source/dcv/videoio/"],
            "dependencies": {
                "dcv:core": "*",
                "dcv:io": "*",
                "ffmpeg-d": "~>4.4.1"
            }
        },
        {
            "name": "plot",
            "description": "Visualization package.",
            "sourcePaths": [
                "source/dcv/plot"
            ],
            "buildTypes": {
                "unittest-release": {
                    "buildOptions": ["unittests", "releaseMode", "optimize", "inline"]
                }
            },
            "dependencies":{
                "dcv:core": "*",
                "bindbc-glfw": "~>1.0.0",
                "bindbc-opengl": "~>1.0.0"
            },
            "versions": ["GLFW_31"],
            "configurations": [
                {
                    "name": "default",
                    "versions": [
                        "GL_31"
                    ]
                },
                {
                    "name": "legacygl",
                    "versions": [
                        "GL_11",
                        "GL_AllowDeprecated",
                        "UseLegacyGL"
                    ]
                }
            ]
        }
    ]
}
